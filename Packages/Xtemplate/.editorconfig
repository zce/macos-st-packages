# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*.sublime-snippet]
end_of_line = lf
insert_final_newline = false
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.js]
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 4

[*.xtpl]
indent_style = space
indent_size = 4